<Window x:Class="RTIC.StartupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="¡Bienvenido a RTiC!" Height="300" Width="400">
    <Grid>
        <!-- MENSAJE DE BIENVENIDA A NUEVOS USUARIOS -->
        <StackPanel Margin="20">
            <TextBlock Text="Bienvenido a RTiC, espero que disfrute de la experencia y pueda ir progrensando poco a poco en el atletismo. Ten paciencia, los cambios ocurren con tiempo. " FontSize="14" Margin="0,0,0,10" TextWrapping="Wrap"/>
            <TextBlock Text="Ingrese su nombre:" FontSize="14" Margin="0,0,0,10"/>
            <!-- EL USUARIO INTRODUCE EL NOMBRE -->
            <TextBox x:Name="NameTextBox" FontSize="14" Margin="0,0,0,10"/>
            <Button Content="Continuar" FontSize="14" Click="StartButton_Click"/>
            <TextBlock Text="Una vez introducido el nombre, no se podrá modificar." FontSize="14" Margin="0,0,0,10" Foreground="Gray" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>

    